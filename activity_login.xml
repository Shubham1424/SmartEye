<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#7EEDAD"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="394dp"
        app:srcCompat="@drawable/top_background1" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="150dp"
        android:layout_height="174dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="247dp"
        android:layout_marginBottom="271dp"
        app:srcCompat="@drawable/ellipse4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="-61dp"
        android:layout_marginEnd="56dp"
        android:fontFamily="sans-serif-condensed"
        android:text="SMARTEYE"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="196dp"
        android:layout_marginTop="-61dp"
        android:layout_marginEnd="79dp"
        android:fontFamily="sans-serif-condensed"
        android:text="LOGIN"
        android:textColor="#199D33"
        android:textSize="40dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/username"
        android:layout_width="381dp"
        android:layout_height="66dp"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#30ffffff"
        android:drawablePadding="20dp"
        android:ellipsize="start"
        android:hint="Username"
        android:padding="20dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="380dp"
        android:layout_height="66dp"
        android:layout_below="@id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#30ffffff"
        android:drawablePadding="20dp"
        android:ellipsize="start"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="#7E8FEE"
        android:text="LOGIN"
        android:textColor="@color/black"
        app:cornerRadius="8dp" />


    <TextView
        android:id="@+id/others"
        android:layout_width="298dp"
        android:layout_height="44dp"
        android:layout_below="@id/loginbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:onClick="openScanningActivity"
        android:text="Are you an Operator?"

        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold|italic" />


    <TextView
        android:id="@+id/others2"
        android:layout_width="166dp"
        android:layout_height="42dp"
        android:layout_below="@+id/loginbtn"
        android:layout_marginStart="-104dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="79dp"
        android:layout_toEndOf="@+id/others"

        android:onClick="openScanningActivity"
        android:text="Click here"
        android:textColor="#3D236C"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="450dp"
        app:srcCompat="@drawable/emailicon" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="550dp"
        app:srcCompat="@drawable/lockicon" />
</RelativeLayout>