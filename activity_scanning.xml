<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7EEDAD"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/scan2"
            android:layout_marginTop="50dp" />

        <TextView
            android:layout_width="248dp"
            android:layout_height="48dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="SCAN"
            android:textColor="#df03082b"
            android:textSize="32dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="440dp"
        android:layout_height="548dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/cvbg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="380dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/cv1" />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/facescan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="40dp"
                android:text="FACE SCAN"
                android:textColor="#d703082b"
                android:textSize="23dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="380dp"
                android:layout_height="80dp"
                android:background="@drawable/cv3" />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:background="@drawable/noplate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="20dp"
                android:text="NO.PLATE SCAN"
                android:textColor="#d703082b"
                android:textSize="23dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"

                android:layout_marginStart="29dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/textView5"
                android:hint="Person Name"
                android:textColor="#010101"
                android:textColorHint="#000000"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Number Plate"
                android:textColorHint="#000000"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/VeihicleStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView5"
                android:layout_alignEnd="@+id/textView4"
                android:layout_marginStart="60dp"
                android:layout_marginTop="65dp"
                android:layout_marginEnd="60dp"
                android:hint="Enter IN OR OUT"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColorHint="#000000"
                android:textSize="24dp" />

            <Button
                android:id="@+id/saveToDatabase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/VeihicleStatus"
                android:layout_alignStart="@+id/VeihicleStatus"
                android:layout_alignEnd="@+id/VeihicleStatus"
                android:layout_marginStart="30dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="#7E8FEE"
                android:text="Submit"
                android:textSize="16dp"
                android:textColor="#000000" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>